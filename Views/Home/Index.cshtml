@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Hệ thống quản lý lịch khám bệnh</h1>
    <p>Hệ thống hỗ trợ quản lý thông tin bệnh nhân và lịch khám hiệu quả.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý bệnh nhân</h5>
                    <p class="card-text">Thêm, sửa, xóa thông tin bệnh nhân</p>
                    <a asp-controller="BenhNhan" asp-action="Index" class="btn btn-primary">Xem danh sách</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý lịch khám</h5>
                    <p class="card-text">Đặt lịch khám, theo dõi lịch hẹn</p>
                    <a asp-controller="LichKham" asp-action="Index" class="btn btn-primary">Xem lịch khám</a>
                </div>
            </div>
        </div>
    </div>
</div>

